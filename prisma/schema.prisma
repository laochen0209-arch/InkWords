// This is your Prisma schema file,
// learn more about it in docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  avatar    String?
  points    Int      @default(0)
  streak    Int      @default(0)
  lastLoginDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PracticeLog {
  id        String   @id @default(cuid())
  userId    String
  score     Int
  mode      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model MistakeBook {
  id        String   @id @default(cuid())
  userId    String
  word       String
  context    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Vocabulary {
  id          String   @id @default(cuid())
  english     String
  chinese     String
  pinyin      String
  exampleEn   String   @map("example_en")
  exampleZh   String   @map("example_zh")
  difficulty   Int
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([english])
}

model Sentence {
  id          String   @id @default(cuid())
  contentEn   String   @map("content_en")
  contentZh   String   @map("content_zh")
  pinyin      String
  author      String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([author])
}

model Article {
  id          String   @id @default(cuid())
  titleEn     String   @map("title_en")
  titleZh     String   @map("title_zh")
  contentEn   String   @map("content_en")
  contentZh   String   @map("content_zh")
  category    String
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  source      String
  category    String
  imageUrl   String?
  url         String   @unique
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category, publishedAt])
}

model CrawlerLog {
  id          String   @id @default(cuid())
  source      String
  status      String
  articleCount Int      @default(0)
  error       String?
  startedAt   DateTime @default(now())
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([source, status])
}

model CrawlerConfig {
  id          String   @id @default(cuid())
  name        String   @unique
  url         String
  selector    String
  category    String
  enabled     Boolean  @default(true)
  interval    Int      @default(3600)
  lastRunAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
}
